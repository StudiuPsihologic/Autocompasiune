<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scholarship.selfcompassion">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_promise"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_promise_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SelfCompassion">
        <activity android:name="com.scholarship.selfcompassion.RestDayActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayNineActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayEightActivity" />
        <activity android:name="com.scholarship.selfcompassion.DaySevenActivity" />
        <activity android:name="com.scholarship.selfcompassion.DaySixActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayFiveActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayFourActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayThreeActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayTwoActivity" />
        <activity android:name="com.scholarship.selfcompassion.DayOneActivity" />
        <activity android:name="com.scholarship.selfcompassion.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.scholarship.selfcompassion.AlarmReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </receiver>

    </application>

</manifest>